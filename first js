const number = [2, 3, 4, 5, 6, 7, 8, 9];
const square = number.map(function squre(element) {
  return Math.pow(element, 2);
});
document.write(square);


const cube = number.map(function cubes(element) {
  return Math.pow(element, 3);
});
document.write(cube);



const evennum = number.filter(function even(element) {
  return element % 2 === 0;
});
document.write(evennum);



const oddnnum = number.filter(function odd(element) {
  return element % 2 !== 0;
});
document.write(oddnnum);





